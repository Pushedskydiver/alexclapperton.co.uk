<!-- ******************** SITE FOOTER : Start ******************** /-->
<footer class="site-footer" role="contentinfo">
  <!-- BEGIN : CONTAINER -->
  <div class="site-container">
    <!-- BEGIN : SITE FOOTER FLEX -->
    <div class="site-footer__flex">
      <!-- BEGIN : SITE FOOTER FLEX ITEM -->
      <div class="site-footer__item">
        <h4 class="site-footer__title">.Alex</h4>
        <p>
          Manchester based Junior/Freelance Front-End Web Developer.
        </p>
        <!-- BEGIN : FOOTER SOCIAL -->
        <div class="footer-social">
          <!-- BEGIN : FOOTER SOCIAL LINK -->
          {{#each global.social}}
            <a href="{{{this.url}}}" class="footer-social__link" title="{{{this.title-attr}}}">
              <svg class="footer-social__icon footer-social__icon--{{{this.icon}}}">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/sprite.svg#{{{this.icon}}}"></use>
              </svg>
              <span class="visually-hidden visually-hidden--white">{{{this.icon}}}</span>
            </a>
          {{/each}}
          <!-- END : FOOTER SOCIAL LINK /-->
          <!-- BEGIN : FOOTER SOCIAL LINK -->
          <a href="{{{global.githubRepo}}}" class="footer-social__link" title="External link to Alex's website Github repo.">
            <svg class="footer-social__icon  footer-social__icon--github">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/sprite.svg#github"></use>
            </svg>
            <span class="visually-hidden visually-hidden--white">Github</span>
          </a>
          <!-- END : FOOTER SOCIAL LINK /-->
        </div>
        <!-- END : FOOTER SOICAL /-->
      </div>
      <!-- END : SITE FOOTER FLEX ITEM /-->
      <!-- BEGIN : SITE FOOTER FLEX ITEM -->
      <div class="site-footer__item">
        <h4 class="site-footer__title">{{{global.twitterHandle}}}</h4>
        <div id="twitter"></div>
      </div>
      <!-- END : SITE FOOTER FLEX ITEM /-->
      <!-- BEGIN : SITE FOOTER FLEX ITEM -->
      <div class="site-footer__item">
        <h4 class="site-footer__title">Latest Posts</h4>
        <!-- BEGIN : SITE FOOTER POST -->
        {{#each_upto articles.[2016] 2}}
          {{>footer-article}}
        {{/each_upto}}
        <!-- END : SITE FOOTER POST /-->
      </div>
      <!-- END : SITE FOOTER FLEX ITEM /-->
    </div>
    <!-- END : SITE FOOTER FLEX /-->
    <p class="site-copyright">Copyright &copy; <script type="text/javascript">document.write(new Date().getFullYear());</script>. All rights reserved.</p>
  </div>
  <!-- END : CONTAINER /-->
</footer>
<!-- ******************** SITE FOOTER : End /******************** /-->


<!--/ Scroll to top -->
<div class="scroll-top" title="Scroll to top">
  <svg class="scroll-top__icon">
    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/sprite.svg#arrow-up"></use>
  </svg>
  <span class="visually-hidden visually-hidden--white">Scroll to top</span>
</div>
