    "data": "./src/data/",
    "layouts": "./layouts/",
    "partials": "./partials/",
    "content": "./src/pages/",
    "fonts": "./src/fonts/**/*.ttf",
    "icons": "./src/icons/*",
    "favicons": "./src/favicons/",
    "images": "./src/images/**/*",
    "forms": "./src/forms/",
    "html": "./src/pages/**/*.hbs",
    "scripts": "./src/scripts/",
