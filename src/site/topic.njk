---
layout: _layouts/page
pagination:
    data: topics
    size: 1
    alias: topic
    addAllPagesToCollections: true
permalink:  "topics/{{ topic.slug }}/index.html"
eleventyComputed:
    title: "Posts about {{ topic.name | lower }}."
    description: "Explore content about {{topic.name}} from Alex Clapperton."
sitemap:
    changefreq: monthly
    priority: 0.8
---

<main class="bg-slate-800 [padding-block:32px] pr-safe pl-safe md:[padding-block:48px]" id="main">
    <div class="container [margin-inline:auto] [padding-inline:16px]">
        <div class="bg-black p-24">
            <h2 class="text-white text-md leading-md fvs-md [margin-block-end:16px]">Explore articles by topic</h2>
            <ul class="flex flex-wrap gap-16" aria-label="Topics">
                {% for topicToShow in topics %}
                    {% set item = topicToShow %}

                {% include '_partials/components/topic.njk' %}
                {% endfor %}
            </ul>
        </div>


        {% for topicItem in topicsByPost %}
            {% if topicItem.topic === topic.slug %}
                <ul class="[margin-block-start:24px] sm:grid sm:grid-cols-2 sm:gap-24 sm:[margin-block-start:32px] md:grid-cols-3">
                {% for item in topicItem.posts %}
                    {% include "_partials/components/article.njk" %}
                {% endfor %}
                </ul>
            {% endif %}
        {% endfor %}
    </div>
</main>
