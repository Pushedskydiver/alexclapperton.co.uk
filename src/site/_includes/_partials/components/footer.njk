        <footer class="[padding-block:32px] pr-safe pl-safe bg-black md:[padding-block:48px]" id="footer">
            <div class="container [margin-inline:auto] [padding-inline:16px]">
                <div class="sm:flex sm:flex-wrap sm:justify-between">
                    <div class="[margin-block-end:32px]">
                        <h3 class="[margin-block-end:16px] font-selawik text-lg leading-lg fvs-sb text-white">Useful links</h3>

                        <ul>
                        {% for item in settings.navigation %}
                            <li class="text-base leading-base fvs-md text-yellow-400 [margin-block-end:16px] last:[margin-block-end:0]">
                                <a class="inline border-solid border-b-2 border-yellow-400 hov:transition-colors hov:duration-200 hov:hover:bg-yellow-400 hov:hover:text-slate-900 motion-reduce:transition-none" href="{{item.url}}" title="{{item.titleAttr}}" data-item-{{item.slug}}>{{item.title}}</a>
                            </li>
                        {% endfor %}
                        </ul>
                    </div>

                    <div class="[margin-block-end:32px]">
                        <h3 class="[margin-block-end:16px] font-selawik text-lg leading-lg fvs-sb text-white">Send me an email</h3>

                        <ul>
                            <li class="text-base leading-base fvs-md text-yellow-400">
                                <a class="inline border-solid border-b-2 border-yellow-400 hov:transition-colors hov:duration-200 hov:hover:bg-yellow-400 hov:hover:text-slate-900 motion-reduce:transition-none" href="mailto:{{settings.email}}">{{settings.email}}</a>
                            </li>
                        </ul>
                    </div>

                    <div class="[margin-block-end:32px]">
                        <h3 class="[margin-block-end:16px] font-selawik text-lg leading-lg fvs-sb text-white">Let's be social</h3>

                        <ul class="sm:flex sm:flex-wrap sm:gap-16">
                        {% for item in settings.social %}
                            <li class="text-base leading-base fvs-md text-yellow-400 [margin-block-end:16px] last:[margin-block-end:0]">
                                <a class="inline border-solid border-b-2 border-yellow-400 hov:transition-colors hov:duration-200 hov:hover:bg-yellow-400 hov:hover:text-slate-900 motion-reduce:transition-none" href="{{item.url}}" title="{{item.titleAttr}}"  {% if item.external %}rel="external"{% endif %}>{{item.title}}</a>
                            </li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>

                <small class="text-sm leading-sm text-slate-400">Copyright &copy; 2022 {{settings.name}}. All rights reserved.</small>
            </div>
        </footer>
    </body>
</html>
