{% set currentUrl = page.url %}
{% set topicUrl = '/topics/' + item.slug + '/' %}
{% set isActiveTopc = currentUrl === topicUrl %}
{% set icon = item.icon %}

<li>
    <a href="{{topicUrl}}" class="flex justify-between items-center gap-8 bg-slate-800 text-white text-base leading-base fvs-md rounded-sm {% if isActiveTopc %} outline outline-2 outline-yellow-400 {% endif %} [padding-block:8px] [padding-inline:12px] focus:outline focus:outline-2 focus:outline-yellow-400" aria-label="View all {{item.name}} articles" {% if isActiveTopc %}aria-current="page"{% endif %}>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" aria-hidden="true">
            <image href="{{icon.url}}" width="100%" height="100%" />
        </svg>
        {{item.name}}
    </a>
</li>
