<!-- BEGIN : ARTICLES ITEM -->
<div class="articles__item">
    <div class="article__content">
        <!-- BEGIN : ARTICLES THUMBNAIL -->
        <picture class="articles__picture">
            <source type="image/webp" data-srcset="https:{{this.data.thumbnail.url}}?fm=webp">
            <img class="articles__image lazyload__image lazyload" data-src="https:{{this.data.thumbnail.url}}" alt="{{this.data.thumbnail.alt}}" data-lazy>

            <noscript>
                <source type="image/webp" srcset="https:{{this.data.thumbnail.url}}?fm=webp">
                <img class="articles__image" src="https:{{this.data.thumbnail.url}}" alt="{{this.data.thumbnail.alt}}">
            </noscript>
        </picture>
        <!-- END : ARTICLES THUMBNAIL /-->
        <!-- BEGIN : ARTICLES DETAILS -->
        <div class="articles__details">
            <a class="articles__heading" href="{{this.url}}" {{#if this.data.external}}rel="external"{{/if}}>{{this.data.title}}</a>
            <p class="articles__body">{{this.data.description}}</p>
        </div>
        <!-- END : ARTICLES DETAILS /-->
    </div>
</div>
<!-- END : ARTICLES ITEM /-->
