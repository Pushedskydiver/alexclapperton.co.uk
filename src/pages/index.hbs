    </div>
    <!-- END : BANNER CONTENT /-->
  </div>
  <!-- END : CONTAINER /-->
  <!-- BEGIN : BANNER SIDEBAR -->
  <div class="banner__sidebar">
    <img class="banner__sidebar-img" src="/images/banner/alex.jpg" alt="Full body portrait of Alex with yellow M&amp;M mascot.">
    <span class="banner__sidebar-title">Alex Clapperton</span>
    <small class="banner__sidebar-sub">Front-end Web Developer <br> from Manchester, UK</small>
    <a class="banner__sidebar-email" href="mailto:hi@alexclapperton.co.uk">hi@alexclapperton.co.uk</a>
    <span class="banner__sidebar-phone">+44 7930 946 211</span>
    <!-- BEGIN : BANNER SIDEBAR SOCIAL -->
    <div class="banner__sidebar-social">
      {{#each global.social}}
        <!-- BEGIN : SOCIAL HEADER ICON -->
        <a href="{{{this.url}}}" class="banner__sidebar-social-link" title="{{{this.title-attr}}}">
          <svg width="20" height="20" class="banner__sidebar-social-icon">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/sprite.svg#{{{this.icon}}}"></use>
          </svg>
          <span class="visually-hidden">{{{this.icon}}}</span>
        </a>
        <!-- END : SOCIAL HEADER ICON /-->
      {{/each}}
    </div>
    <!-- END : BANNER SIDEBAR SOCIAL /-->
    <a class="btn btn--white banner__sidebar-btn" href="#">
      View portfolio
      <svg width="20" height="20" class="btn__icon btn__icon--white">
        <use xlink:href="/images/icons/sprite.svg#arrow" xmlns:xlink="http://www.w3.org/1999/xlink"></use>
      </svg>
    </a>
  </div>
  <!-- END : BANNER SIDEBAR /-->
</section>
