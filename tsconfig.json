{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": ".",
    "outDir": "",
    "paths": {
      "Src/*": ["src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/utils/**/*.js",
    "src/site/_data/*.js",
    "node_modules"
  ]
}
