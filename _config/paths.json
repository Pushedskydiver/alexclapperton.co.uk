{
  "source": {
    "base": "./src/",
    "data": "./src/data/",
    "layouts": "./_layouts/",
    "partials": "./_partials/",
    "content": "./src/pages/",
    "fonts": "./src/fonts/**/*",
    "icons": "./src/icons/*",
    "favicons": "./src/favicons/",
    "images": "./src/images/**/*",
    "forms": "./src/forms/",
    "scripts": {
      "common": "./src/scripts/common/",
      "vendor": "./src/scripts/vendor/",
      "dev": "./src/scripts/dev/"
    },
    "styles": "./src/styles/"
  },
  "dist": {
    "base": "./public/",
    "fonts": "./public/fonts/",
    "icons": "./public/images/icons/",
    "favicons": "./public/favicons/",
    "images": "./public/images/",
    "forms": "./public/forms/",
    "scripts": "./public/js/",
    "styles": "./public/css/"
  },
  "reports": {
    "stylelint": "./src/reports/stylelint/",
    "eslint": "./src/reports/eslint/"
  },
  "sass": {
    "settings": "./src/styles/settings/**/*.scss",
    "tools": {
      "functions": "./src/styles/tools/functions/*.scss",
      "props": "./src/styles/tools/mixins/_properties.scss",
      "mixins": "./src/styles/tools/mixins/*.scss"
    },
    "generic": "./src/styles/generic/**/*.scss",
    "elements": "./src/styles/elements/**/*.scss",
    "objects": "./src/styles/objects/**/*.scss",
    "components": "./src/styles/components/**/*.scss"
  }
}
