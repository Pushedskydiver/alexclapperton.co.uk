<!DOCTYPE html>
<html lang="en-GB">
    <head>
        <!-- META TAGS  -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, minimum-scale=1, user-scalable=yes, initial-scale=1, viewport-fit=cover">
        <meta name="description" content="{{#if description}}{{{description}}}{{else}}{{#if title}}{{{title}}}{{/if}}{{#unless home}} &mdash; Alex Clapperton{{/unless}} &mdash; Front-End Web Developer{{/if}}">
        {{#if nofollow}}
        <meta name="robots" content="noindex, nofollow">
        {{/if}}

        <!-- PAGE TITLE -->
        <title>
            {{#if title}}{{{title}}}{{/if}}{{#unless home}} &mdash; {{{data.global.name}}}{{/unless}}
            {{#if data.global.jobTitle}} &mdash; {{{data.global.jobTitle}}}{{/if}}
        </title>

        <!-- PRELOAD FILES -->
        <link rel="preload" href="/css/main.css" as="style">
        <link rel="preload" href="/fonts/ubuntu/ubuntu-regular.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/fonts/ubuntu/ubuntu-medium.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/fonts/avenir-next-variable.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/fonts/selawik-variable.woff2" as="font" type="font/woff2" media="(min-width: 62em)" crossorigin>
        {{#if home}}
        <link rel="preload" href="/images/alex/alex-square.jpg" as="image" media="(max-width: 61.9375em)">
        <link rel="preload" href="/images/alex/alex-landscape.jpg" as="image" media="(min-width: 62em)">
        {{/if}}
        {{#if about}}
        <link rel="preload" href="/images/banner/banner-about-mobile.jpg" as="image" media="(max-width: 61.9375em)">
        <link rel="preload" href="/images/banner/banner-about-desktop.jpg" as="image" media="(min-width: 62em)">
        {{/if}}

        <!-- STYLESHEET -->
        <link rel="stylesheet" href="/css/main.css">

        <!-- SITEMAP -->
        <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />

        <!-- MANIFEST -->
        <link rel="manifest" href="/site.webmanifest">

        <link rel="alternate" href="{{{data.global.url}}}" hreflang="en-gb">
        <link rel="canonical" href="{{{data.global.url}}}{{#if article.date}}/articles{{/if}}{{#if article.slug}}/{{{article.slug}}}{{/if}}">

        <script type="application/ld+json">
            {
                "@context": "http://schema.org",
                {{#if article.date}}
                    "@type": "Article",
                    "mainEntityOfPage": {
                        "@type": "WebPage",
                        "@id": "{{data.global.url}}{{#if article.date}}/articles{{/if}}{{#if article.slug}}/{{article.slug}}{{/if}}"
                    },
                    "headline": "{{{title}}}",
                    "datePublished": "{{article.date}}",
                    "dateModified":  "{{article.date}}",
                    "author": {
                        "@type": "Person",
                        "name": "{{data.global.name}}"
                    },
                    "publisher": {
                        "@type": "Organization",
                        "name": "{{data.global.name}}",
                        "logo": {
                            "@type": "ImageObject",
                            "url": "{{data.global.url}}/favicons/favicon-256x256.png"
                        }
                    },
                    "url": "{{data.global.url}}{{#if article.date}}/articles{{/if}}{{#if article.slug}}/{{article.slug}}{{/if}}",
                    "image" : "{{#if ogImage}}{{ogImage}}{{else}}{{data.global.url}}/images/profile/alex-clapperton.jpg{{/if}}"
                {{else}}
                    "@type": "Person",
                    "name": "{{data.global.name}}",
                    "url": "{{data.global.url}}{{#if article.date}}/articles{{/if}}{{#if article.slug}}/{{article.slug}}{{/if}}",
                    "image" : "{{#if ogImage}}{{ogImage}}{{else}}{{data.global.url}}/images/profile/alex-clapperton.jpg{{/if}}",
                    "sameAs" : [
                    {{#each data.global.social}}
                        {{#unless @last}}"{{url}}",{{/unless}}
                        {{#if @last}}"{{url}}"{{/if}}
                    {{/each}}
                    ]
                {{/if}}
            }
        </script>

        <!-- FACEBOOK -->
        <meta property="og:title" content="{{#if title}}{{{title}}}{{/if}}{{#unless home}} &mdash; {{{data.global.name}}}{{/unless}}{{#if data.global.jobTitle}} &mdash; {{{data.global.jobTitle}}}{{/if}}" />
        <meta property="og:type" content="{{#if article.date}}article{{else}}website{{/if}}" />
        <meta property="og:url" content="{{{data.global.url}}}{{#if article.date}}/articles{{/if}}{{#if article.slug}}/{{{article.slug}}}{{/if}}" />
        <meta property="og:image" content="{{{data.global.url}}}{{#if ogImage}}{{{ogImage}}}{{else}}/images/profile/alex-clapperton.jpg{{/if}}" />
        <meta property="og:description" content="{{#if summary}}{{{summary}}}{{else}}{{{data.global.name}}}{{/if}}">
        <meta property="og:locale" content="en_GB">
        <meta property="article:author" content="{{{data.global.name}}}">
        <meta property="og:site_name" content="{{{data.global.name}}}">

        <!-- TWITTER -->
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="{{{data.global.twitterHandle}}}">
        <meta name="twitter:creator" content="{{{data.global.twitterHandle}}}">
        <meta name="twitter:url" content="{{{data.global.url}}}{{#if article.date}}/articles{{/if}}{{#if article.slug}}/{{{article.slug}}}{{/if}}">
        <meta name="twitter:title" content="{{#if title}}{{{title}}} &mdash; {{/if}}{{{data.global.name}}}{{#if data.global.jobTitle}} &mdash; {{{data.global.jobTitle}}}{{/if}}">
        <meta name="twitter:description" content="{{#if summary}}{{{summary}}}{{else}}{{{data.global.name}}} &mdash; Articles{{/if}}">
        <meta name="twitter:image" content="{{{data.global.url}}}{{#if ogImage}}{{{ogImage}}}{{else}}/images/profile/alex-clapperton.jpg{{/if}}">

        <!-- FAVICONS -->
        <link rel="icon" type="image/png" href="/favicons/favicon-48x48.png" sizes="16x16">
        <link rel="icon" type="image/png" href="/favicons/favicon-72x72.png" sizes="32x32">
        <link rel="icon" type="image/png" sizes="96x96" href="/favicons/favicon-96x96.png">
        <link rel="icon" type="image/png" sizes="144x144" href="/favicons/favicon-144x144.png">
        <link rel="icon" type="image/png" sizes="256x256" href="/favicons/favicon-256x256.png">

        <!-- APPLE ICONS -->
        <meta name="apple-mobile-web-app-title" content="Alex">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="default">
        <link rel="apple-touch-icon" href="/favicons/apple-touch-icon.png">
        <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#0e0d0d">

        <!-- APPLE SPLASH SCREENS -->
        <link rel="apple-touch-startup-image" href="/images/splash/splash-2048x2732.jpg" media="(min-device-width: 1024px) and (max-device-width: 1024px) and (-webkit-min-device-pixel-ratio: 2) and
        (orientation: portrait)">
        <link rel="apple-touch-startup-image" href="/images/splash/splash-1668x2224.jpg" media="(min-device-width: 834px) and (max-device-width: 834px) and (-webkit-min-device-pixel-ratio: 2) and
        (orientation: portrait)">
        <link rel="apple-touch-startup-image" href="/images/splash/splash-1536x2048.jpg" media="(min-device-width: 768px) and (max-device-width: 1024px) and (-webkit-min-device-pixel-ratio: 2) and
        (orientation: portrait)">
        <link rel="apple-touch-startup-image" href="/images/splash/splash-1125x2436.jpg" media="(device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3) and (orientation:
        portrait)">
        <link rel="apple-touch-startup-image" href="/images/splash/splash-1242x2208.jpg" media="(device-width: 414px) and (device-height: 736px) and (-webkit-device-pixel-ratio: 3) and (orientation:
        portrait)">
        <link rel="apple-touch-startup-image" href="/images/splash/splash-750x1334.jpg" media="(device-width: 375px) and (device-height: 667px) and (-webkit-device-pixel-ratio: 2) and (orientation:
        portrait)">
        <link rel="apple-touch-startup-image" href="/images/splash/splash-640x1136.jpg" media="(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2) and (orientation:
        portrait)">

        <!-- MS TILE ICONS -->
        <meta name="application-name" content="Alex">
        <meta name="msapplication-TileColor" content="#fff">
        <meta name="msapplication-square70x70logo" content="/favicons/favicon-70x70.png">
        <meta name="msapplication-TileImage" content="/favicons/favicon-144x144.png">
        <meta name="msapplication-square150x150logo" content="/favicons/favicon-150x150.png">
        <meta name="msapplication-wide310x150logo" content="/favicons/favicon-310x150.png">
        <meta name="msapplication-square310x310logo" content="/favicons/favicon-310x310.png">
        <meta name="msapplication-tooltip" content="Alex">
        <meta name="msapplication-config" content="/browserconfig.xml">
        <meta name="theme-color" content="#0e0d0d">

        <!-- JAVASCRIPT -->
        {{{renderScripts}}}
    </head>

    <body id="top">

        <!-- JAVASCRIPT ALERT -->
        <noscript>
            <div class="support-notice support-notice--javascript">
              <p>You currently have JavaScript in your browser turned off, so some features of this site may not work fully.</p>
              <p>Find out <a href="http://enable-javascript.com" rel="external" target="_blank">how to turn JavaScript on</a>.</p>
            </div>
        </noscript>
